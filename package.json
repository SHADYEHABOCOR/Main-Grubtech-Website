{
  "name": "grubtech-monorepo",
  "version": "1.0.7",
  "private": true,
  "description": "Grubtech Website - Monorepo containing frontend, backend, and Cloudflare Workers",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:workers": "cd workers && npm run dev",
    "dev:workers:remote": "cd workers && npm run dev:remote",
    "dev:cloudflare": "npm-run-all --parallel dev:frontend dev:workers",
    "build": "npm-run-all build:frontend build:backend",
    "build:frontend": "cd frontend && npm install --include=dev && npm run build",
    "build:backend": "cd backend && npm install --include=dev && npm run build",
    "build:backend-only": "cd backend && npm install",
    "build:workers": "cd workers && npm run build",
    "install:all": "npm-run-all install:frontend install:backend install:workers",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:workers": "cd workers && npm install",
    "start": "cd backend && npm run start:seed",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && npm start",
    "deploy:workers": "cd workers && wrangler deploy",
    "deploy:workers:staging": "cd workers && wrangler deploy --env staging",
    "deploy:pages": "cd frontend && npm run build && wrangler pages deploy dist --project-name=grubtech-website",
    "deploy:cloudflare": "npm-run-all build:frontend deploy:workers deploy:pages",
    "test:workers": "cd workers && npm test",
    "test:workers:run": "cd workers && npm run test:run",
    "test:workers:coverage": "cd workers && npm run test:coverage",
    "typecheck": "cd frontend && npm run typecheck",
    "typecheck:workers": "cd workers && npm run typecheck",
    "typecheck:all": "npm-run-all typecheck typecheck:workers",
    "lint": "cd frontend && npm run lint",
    "db:migrate:local": "cd workers && wrangler d1 execute grubtech-db --local --file=./migrations/0001_initial_schema.sql && wrangler d1 execute grubtech-db --local --file=./migrations/0002_indexes.sql",
    "db:migrate": "cd workers && wrangler d1 execute grubtech-db --file=./migrations/0001_initial_schema.sql && wrangler d1 execute grubtech-db --file=./migrations/0002_indexes.sql"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/grubtech-website"
  },
  "keywords": [
    "grubtech",
    "restaurant",
    "pos",
    "food-delivery"
  ],
  "author": "Grubtech",
  "license": "UNLICENSED",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  }
}
