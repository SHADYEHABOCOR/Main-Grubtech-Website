# API Configuration
VITE_API_URL=http://localhost:3000/api

# App Configuration
VITE_APP_NAME=Grubtech

# ==========================================
# LEAD GENERATION & ANALYTICS CONFIGURATION
# ==========================================
# Copy these to your .env.local and fill in actual keys

# Google Analytics 4
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (optional - use this OR GA4 directly)
VITE_GTM_ID=GTM-XXXXXXX

# Mixpanel (optional - for advanced analytics)
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here

# Hotjar (for heatmaps and session recordings)
VITE_HOTJAR_ID=your_hotjar_id_here
VITE_HOTJAR_SV=6

# Microsoft Clarity (alternative to Hotjar)
VITE_CLARITY_PROJECT_ID=your_clarity_project_id

# Intercom (for live chat)
VITE_INTERCOM_APP_ID=your_intercom_app_id

# Calendly (for demo scheduling)
VITE_CALENDLY_URL=https://calendly.com/your-username/demo

# Lead Notifications (webhook for Slack/Discord)
VITE_LEAD_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LIVE_CHAT=true
VITE_ENABLE_EXIT_INTENT=true
VITE_ENABLE_STICKY_CTA=true