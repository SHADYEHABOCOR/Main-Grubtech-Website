{
  "name": "grubtech-workers",
  "version": "1.0.0",
  "type": "module",
  "description": "Cloudflare Workers API for Grubtech CMS",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --local --persist",
    "dev:remote": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "build": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.config.ts --dir src/__tests__",
    "db:migrate": "wrangler d1 execute grubtech-db --file=./migrations/0001_initial_schema.sql",
    "db:migrate:local": "wrangler d1 execute grubtech-db --local --file=./migrations/0001_initial_schema.sql"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "bcrypt-edge": "^0.1.0",
    "hono": "^4.6.0",
    "nanoid": "^5.0.9",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-istanbul": "^2.1.9",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.99.0"
  }
}
